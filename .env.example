# ──────────────────────────────────────────
# LLM Provider — pick one (or both)
# ──────────────────────────────────────────
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Which model to use (default: gpt-4o-mini)
# Examples: gpt-4o-mini, gpt-4o, claude-sonnet-4-20250514, claude-haiku-4-20250414
LLM_MODEL=gpt-4o-mini
# Provider: "openai" or "anthropic" (default: openai)
LLM_PROVIDER=openai

# ──────────────────────────────────────────
# GudDesk — your customer support platform
# ──────────────────────────────────────────
GUDDESK_URL=https://your-guddesk-instance.com
GUDDESK_API_KEY=gd_bot_your_workspace_app_id

# ──────────────────────────────────────────
# GudCal — your scheduling platform
# ──────────────────────────────────────────
GUDCAL_URL=https://your-gudcal-instance.com
GUDCAL_USERNAME=your-username
GUDCAL_EVENT_SLUG=30-min-demo
# The eventTypeId is needed for booking — find it in your GudCal dashboard
GUDCAL_EVENT_TYPE_ID=your-event-type-uuid

# ──────────────────────────────────────────
# GudForm — your form builder platform
# ──────────────────────────────────────────
GUDFORM_URL=https://your-gudform-instance.com
GUDFORM_FORM_ID=your-lead-capture-form-id
# Map your form question IDs to field names
GUDFORM_FIELD_NAME=question-id-for-name
GUDFORM_FIELD_EMAIL=question-id-for-email
GUDFORM_FIELD_COMPANY=question-id-for-company
GUDFORM_FIELD_PHONE=question-id-for-phone

# ──────────────────────────────────────────
# Server
# ──────────────────────────────────────────
PORT=3001
WEBHOOK_SECRET=your-webhook-secret
